@page
@model CineMatique.Views.Accueil

@{
Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Films - CineMatique</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMuhN3Wf2h/VsBZR6zP1G8M5X/1VGJ7b1gJzB0" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }
        header {
            background: #35424a;
            color: #ffffff;
            padding: 10px 0;
            text-align: center;
        }
        h1 {
            margin: 0;
        }
        .container {
            width: 80%;
            margin: 20px auto;
            background: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .btn {
            background-color: #5cb85c;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }
        .btn:hover {
            background-color: #4cae4c;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #35424a;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

<header>
    <h1>Gestion des Films - CineMatique</h1>
</header>

<div class="container">
    <h2>Liste des Films</h2>
    <a href="/Film/Create" class="btn">Ajouter un Film</a>

    <table>
        <thead>
        <tr>
            <th>Titre</th>
            <th>Genre</th>
            <th>Année</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <!-- Exemple de lignes de film -->
        <tr>
            <td>Film Exemple 1</td>
            <td>Action</td>
            <td>2024</td>
            <td>
                <a href="/Films/Edit/1" class="btn">Modifier</a>
                <a href="/Films/Delete/1" class="btn" style="background-color: #d9534f;">Supprimer</a>
            </td>
        </tr>
        <tr>
            <td>Film Exemple 2</td>
            <td>Comédie</td>
            <td>2023</td>
            <td>
                <a href="/Films/Edit/2" class="btn">Modifier</a>
                <a href="/Films/Delete/2" class="btn" style="background-color: #d9534f;">Supprimer</a>
            </td>
        </tr>
        <!-- Fin des exemples -->
        </tbody>
    </table>
</div>

</body>
</html>

@using CineMatique.Controllers
@model CineMatique.Views.FilmCreateViewModel

@{
ViewData["Title"] = "Créer un Film";
}

<h1>Créer un Film</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Film.Title" class="control-label"></label>
        <input asp-for="Film.Title" class="form-control" id="Title"/>
        <span asp-validation-for="Film.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Film.Description" class="control-label"></label>
        <textarea asp-for="Film.Description" class="form-control" id="Description"></textarea>
        <span asp-validation-for="Film.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Film.DateCreated" class="control-label"></label>
        <input asp-for="Film.DateCreated" class="form-control" type="date" id="DateCreated"/>
        <span asp-validation-for="Film.DateCreated" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Film.Duration" class="control-label"></label>
        <input asp-for="Film.Duration" class="form-control" type="time" id="Duration"/>
        <span asp-validation-for="Film.Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Film.GenreId" class="control-label"></label>
        <select asp-for="Film.GenreId" class="form-control" id="Genre">
            <option value="">Sélectionnez un genre</option>
            @foreach (var genre in Model.Genres)
            {
            <option value="@genre.Id">@genre.Name</option>
            }
        </select>
        <span asp-validation-for="Film.GenreId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Créer</button>
    </div>
</form>

@if (!ViewData.ModelState.IsValid)
{
<div>
    <h4>Erreurs de validation :</h4>
    <ul>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
        <li>@error.ErrorMessage</li>
        }
    </ul>
</div>
}

